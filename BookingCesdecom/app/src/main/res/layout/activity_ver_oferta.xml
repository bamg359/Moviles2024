<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0D9D9"
    tools:context=".VerOferta">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="48dp"
        android:text="Consultar Oferta"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/input_buscar_oferta"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_buscar_oferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="55dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="86dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_consultar_oferta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_buscar_oferta">

        <TextView
            android:id="@+id/txt_ver_id_oferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Codigo Oferta" />

        <TextView
            android:id="@+id/txt_ver_titulo_oferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NOmbre Oferta" />

        <TextView
            android:id="@+id/txt_ver_nombre_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre_ oferta" />

        <TextView
            android:id="@+id/txt_ver_acomodacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="AcomodaciÃ³n" />

        <TextView
            android:id="@+id/txt_ver_precio_pleno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio Pleno" />

        <TextView
            android:id="@+id/txt_ver_precio_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio final " />

    </LinearLayout>

    <Button
        android:id="@+id/btn_consultar_oferta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#45858C"
        android:text="Consultar"
        app:layout_constraintBottom_toTopOf="@+id/btn_volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#45858C"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_consultar_oferta" />
</androidx.constraintlayout.widget.ConstraintLayout>