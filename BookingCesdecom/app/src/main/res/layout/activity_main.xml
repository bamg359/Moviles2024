<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0D9D9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:text="BookingCesde.com"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/img_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_inicio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="66dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_creador_oferta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/polynesia" />

    <Button
        android:id="@+id/btn_ir_reserva"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="19dp"
        android:backgroundTint="#D9C589"
        android:text="Reservar"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_creador_oferta"
        app:layout_constraintEnd_toEndOf="@+id/img_inicio" />

    <Button
        android:id="@+id/btn_creador_oferta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#D9C589"
        android:text="Registrar Oferta"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_reserva"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_reserva"
        app:layout_constraintTop_toBottomOf="@+id/img_inicio" />

</androidx.constraintlayout.widget.ConstraintLayout>